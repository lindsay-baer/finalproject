<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tracker"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#5DBCDB">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFF"
        android:textStyle="bold"
        android:fontFamily="Verdana"
        android:textSize="22dp"
        android:text="Did you use any of these appliances today? Air conditioner, space heater, clothes dryer, hair dryer, electric stove "/>

    <Button
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:background="@drawable/blueicon"
        android:text="1-2"
        android:textColor="#FFFF"
        android:textStyle="bold"
        android:fontFamily="verdana"
        android:textSize="18dp"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="200dp"
        />

    <Button
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:background="@drawable/blueicon"
        android:text="0"
        android:textColor="#FFFF"
        android:textSize="18dp"
        android:textStyle="bold"
        android:fontFamily="verdana"
        android:layout_marginTop="110dp"
        />

    <Button
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:background="@drawable/blueicon"
        android:text="3"
        android:textColor="#FFFF"
        android:textStyle="bold"
        android:textSize="18dp"
        android:fontFamily="verdana"
        android:layout_marginTop="300dp"
        />

    <Button
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:background="@drawable/blueicon"
        android:text="4+"
        android:textSize="18dp"
        android:textColor="#FFFF"
        android:textStyle="bold"
        android:fontFamily="verdana"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="200dp"
        />


</RelativeLayout>
