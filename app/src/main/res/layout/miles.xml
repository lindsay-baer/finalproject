<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tracker"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#5DBCDB">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFF"
        android:textStyle="bold"
        android:fontFamily="Verdana"
        android:textSize="36dp"
        android:text="How many miles do you travel per year?"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/blueicon"
        android:text="11,000 - 20,000"
        android:textColor="#FFFF"
        android:textStyle="bold"
        android:fontFamily="verdana"
        android:textSize="18dp"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="200dp"
        />

    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/blueicon"
        android:text="0 - 10,000"
        android:textColor="#FFFF"
        android:textSize="18dp"
        android:textStyle="bold"
        android:fontFamily="verdana"
        android:layout_marginTop="110dp"
        />

    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/blueicon"
        android:text="21,000 - 50,000"
        android:textColor="#FFFF"
        android:textStyle="bold"
        android:textSize="18dp"
        android:fontFamily="verdana"
        android:layout_marginTop="300dp"
        />

    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/blueicon"
        android:text="51,000+"
        android:textSize="18dp"
        android:textColor="#FFFF"
        android:textStyle="bold"
        android:fontFamily="verdana"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="200dp"
        />


</RelativeLayout>
